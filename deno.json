{
	"name": "@lambdaurora/libhtml",
	"version": "1.2.3",
	"exports": "./mod.ts",
	"tasks": {
		"build": "deno run --allow-read --allow-write --allow-net --allow-env=HOME,ESBUILD_BINARY_PATH,XDG_CACHE_HOME,NPM_CONFIG_REGISTRY --allow-run build_logic/build.ts",
		"check": "deno lint && deno check mod.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^0.225.3"
	},
	"lint": {
		"include": [
			"./mod.ts",
			"./lib/*.ts",
			"./test/"
		],
		"exclude": [
			"./dist/"
		]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 180,
		"include": [
			"./mod.ts",
			"./lib/*.ts",
			"./test/"
		],
		"exclude": [
			"./dist/"
		]
	},
	"test": {
		"include": [
			"./test/"
		]
	},
	"publish": {
		"include": [
			"README.md",
			"CHANGELOG.md",
			"LICENSE",
			"deno.json",
			"mod.ts",
			"lib/*",
			"dist/",
			"dist/lib/"
		],
		"exclude": [
			"./test/"
		]
	},
	"lock": false
}
